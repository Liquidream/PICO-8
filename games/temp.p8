pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
local pos={
 x=50,
 y=60
}

local tar={
 x=100,
 y=100
}

function _update()
 cls()
 circfill(pos.x,pos.y,5,8)
	circfill(tar.x,tar.y,5,12)
	
	if pos.x!=tar.x then
		local dx=pos.x-tar.x
		dx=dx/abs(dx)
		pos.x-=dx
	end

	if pos.y!=tar.y then
		local dy=pos.y-tar.y
		dy=dy/abs(dy)
		pos.y-=dy	
	end
	printh("pos="..pos.x..","..pos.y
	.."  tar="..tar.x..","..tar.y)
end
